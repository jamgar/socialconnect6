<%= form_with(model: post, class: "mb-4") do |form| %>
  <% if post.errors.any? %>
    <%= render "shared/form_errors", resource: @post %>
  <% end %>

  <% if post.image.attached? %>
    <div class="flex items-center max-h-96 overflow-hidden">
      <%= image_tag url_for(post.image), class: "w-full" %>
    </div>
  <% end %>
  <div class="mb-4">
    <%= form.label :content, class: "block mb-2 text-sm font-medium text-gray-900" %>
    <%= form.text_area :content, autofocus: true, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
  </div>

  <% if !post.image.attached? %>
    <div class="mb-4">
      <%= form.label :image, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= form.file_field :image, accept: ".jpg, .jpeg, .png" %>
    </div>
  <% end %>

  <div>
    <%= form.submit "Submit", class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
  </div>
<% end %>
