<div class="container-md mx-auto my-8 max-w-lg sm:px-0 px-4">
  <div class="pb-4 border-b">
    <%= link_to "New post", new_post_path, data: { turbo_frame: dom_id(Post.new) }, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %>
  </div>

  <%= turbo_frame_tag Post.new %>
  
  <%= turbo_frame_tag "posts" do %>
    <%= render @posts %>
  <% end %>
</div>
