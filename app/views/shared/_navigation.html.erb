<div class="navigation flex shadow-sm items-center px-4 bg-white sticky top-0 z-10">
  <%= link_to "Social Connect 6", root_path, class: "self-center text-xl font-semibold text-blue-700 hover:text-blue-800 whitespace-nowrap mr-auto py-4" %>
  <div class="flex inline-block text-sm px-4 py-2 leading-none rounded no-underline text-gray hover:text-gray-900 hover:bg-white">
    <ul class="flex flex-row p-4 text-sm font-medium">
      <li>
        <%= link_to "Feed", posts_path, class: "bg-transparent text-blue-700 mr-4" %>
      </li>
      <li>
        <%= link_to "Friends", friendships_path, class: "bg-transparent text-blue-700" %>
      </li>
    </ul>
    <div class="flex items-center">
      <div class="relative" data-controller="dropdown">
        <div data-action="click->dropdown#toggle click@window->dropdown#hide" role="button" data-dropdown-target="button" tabindex="0" class="inline-block select-none">
          <span class="appearance-none flex items-center inline-block text-gray-700">
            <% if current_user %>
              <%= avatar(current_user)%>
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="h-4 w-4"><path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path></svg>
            <% end %>
          </span>
        </div>
        <div data-dropdown-target="menu" class="absolute right-0 mt-2 hidden">
          <div class="bg-white shadow rounded border overflow-hidden w-max">
            <% if current_user %>
            <div class="block px-8 py-3 text-gray-900 bg-white whitespace-nowrap"><%= current_user.email %></div>
            <% end %>
            <hr>
            <%= link_to "Profile", profile_path(current_user.profile), data: {action: "click->dropdown#toggle"}, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
            <%= link_to "Account", edit_user_registration_path(current_user), data: { action: "click->dropdown#toggle" }, class: 'no-underline block pl-8 py-3 text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' %>
            <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false, action: "click-dropdown#toggle" }, form: { class: 'text-gray-900 bg-white hover:bg-gray-300 whitespace-nowrap' }, class: "w-full pl-8 py-3 text-left" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
